/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/methsnp -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

process {
    executor = 'slurm'

    withName: 'SAMTOOLS_FAIDX' {
        container = "${baseDir}/images/common_tools.sif"
        cpus = 8
        memory = '16GB'
        time = '1h'
        queue = 'cn-long'
    }

    withName: 'SAMTOOLS_INDEX' {
        container = "${baseDir}/images/common_tools.sif"
        cpus = 8
        memory = '16GB'
        time = '1h'
        queue = 'cn-long'
    }

    withName: 'SAMTOOLS_CONVERT' {
        container = "${baseDir}/images/common_tools.sif"
        cpus = 8
        memory = '16GB'
        time = '12h'
        queue = 'cn-long'
    }
}

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Input data
    // TODO nf-core: Specify the paths to your test data on nf-core/test-datasets
    // TODO nf-core: Give any required params for the test so that command line flags are not needed
    input  = params.pipelines_testdata_base_path + 'samplesheet.csv'
    outdir = params.pipelines_testdata_base_path + 'results'
    reference = params.pipelines_testdata_base_path + 'reference.fasta'
}

profiles {
    singularity {
        singularity.enabled    = true
        singularity.autoMounts = true
        singularity.runOptions = '--bind /lustre1,/lustre2'
    }
}
